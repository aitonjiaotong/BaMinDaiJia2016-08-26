                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/normalTextSize" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_separate" />

            <RelativeLayout
                android:id="@+id/rela_user_qianming"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_selector_white_system_gray"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="我的签名"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normalTextSize" />

                <ImageView
                    android:id="@+id/imageView69"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/car_icon_table_arrow_right_pressed" />

                <TextView
                    android:id="@+id/tv_user_qianming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imageView69"
                    android:ellipsize="end"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:text="请填写"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/normalTextSize" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_separate"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"

                android:background="@drawable/layout_selector_white_system_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
